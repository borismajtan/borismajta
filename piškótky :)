import tkinter as tk
from tkinter import messagebox
import winsound

class Piškôrky:
    def __init__(self, master):
        self.master = master
        self.master.title("Piškôrky")
        self.board = [[None] * 3 for _ in range(3)]
        self.current_player = "X"
        self.create_widgets()

         # Vytvorí mi tlačidlá pre  plochu
    def create_widgets(self):
        self.buttons = [[tk.Button(self.master, text="", width=10, 
                                    height=3, command=lambda r=r, c=c: self.on_click(r, c))
                         for c in range(3)] for r in range(3)]
        for r in range(3):
            for c in range(3):
                self.buttons[r][c].grid(row=r, column=c)

         # pre kliknutie na tlačidlo na hracej ploche
    def on_click(self, row, col):
        
        if self.board[row][col] is None and not self.check_winner():
            self.board[row][col] = self.current_player                         # Ak je bunka prázdna a nie je žiadny víťaz
            self.buttons[row][col].config(text=self.current_player)
            winner = self.check_winner()
            
            if winner:
                self.play_win_effect(winner)                                          # Ak je víťaz, prehraje zvuk a zobrazí informačné okno
                messagebox.showinfo("Koniec hry", f"Vyhráva hráč {winner}!")
                self.menu_hry()
            
            elif self.check_draw():
                messagebox.showinfo("Koniec hry", "Je to remíza!")                     # Ak je remíza, zobrazí informačné okno
                self.menu_hry()
            else:
                # Zmení hráča ked je odklikne 
                self.current_player = "O" if self.current_player == "X" else "X"

   
    def check_winner(self):
        for i in range(3):
            if self.board[i][0] == self.board[i][1] == self.board[i][2] is not None:
                return self.board[i][0]
            if self.board[0][i] == self.board[1][i] == self.board[2][i] is not None:                # kto je vitaz 
                return self.board[0][i]

        if self.board[0][0] == self.board[1][1] == self.board[2][2] is not None:
            return self.board[0][0]
        if self.board[0][2] == self.board[1][1] == self.board[2][0] is not None:
            return self.board[0][2]

        return None

    
        def check_draw(self):
            for row in self.board:              
                for cell in row:                        #zistuje mi ci je remiza
                    if cell is None:
                        return False
        return True


    
    def menu_hry(self): 
        for widget in self.master.winfo_children():
            widget.destroy()                                                     # Vytvorí menu pre začatie novej hry
        tk.Button(self.master, text="Začať hru", command=self.start_game, width=20, height=2).pack(pady=20)

    
    def start_game(self):
        self.board = [[None] * 3 for _ in range(3)]
        self.current_player = "X"
        for widget in self.master.winfo_children():                                    # Začne novú hru# Začne novú hru
            widget.destroy()
        self.create_widgets()

   
    def play_win_effect(self, winner):
        sound_file = "win_X.wav" if winner == "X" else "win_O.wav"                   
        winsound.PlaySound(sound_file, winsound.SND_ASYNC)                      #pusti hudbicku pri vyhre 


root = tk.Tk()
game = Piškôrky(root)
root.mainloop()

