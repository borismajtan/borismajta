import math
def obsahuje_samocisla(s):
    return s.isdigit()

while True:
    user_input = input("Zadej poÄet: ")

    if obsahuje_samocisla(user_input):  
        n = int(user_input)
        if n == 0:
            print()
        else:
            for i in range(math.ceil(n / 2)):
                for x in range(i):
                    print(" ", end=" ")

                for y in range(n - i * 2):
                    print("*", end=" ")
                print(" ")

            for i in range(math.ceil(n / 2) - 2, -1, -1):
                for x in range(i):
                    print(" ", end=" ")

                for y in range(n - i * 2):
                    print("*", end=" ")
                print(" ")
        break
    
    else:
        print()







